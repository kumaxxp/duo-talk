{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/mcp/tools.chat.result.schema.json",
  "title": "chat_result",
  "type": "object",
  "properties": {
    "reply": { "type": "string" },
    "hits": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "brand_name": { "type": "string" },
          "product_name": { "type": "string" },
          "brewery": { "type": "string" },
          "region": { "type": "string" },
          "label_features": { "type": "array", "items": { "type": "string" } },
          "file_path": { "type": "string" }
        },
        "additionalProperties": true
      },
      "default": []
    },
    "llm": { "type": "string", "enum": ["on", "off"] },
    "elapsed_ms": { "type": "integer" },
    "rag_hit_count": { "type": "integer" },
    "run_id": { "type": "string" },
    "trace_id": { "type": "string" },
    "server_version": { "type": "string" },
    "policy_version": { "type": "string" },
    "warnings": { "type": "array", "items": { "type": "string" }, "default": [] }
  },
  "required": ["reply"],
  "additionalProperties": true
}

